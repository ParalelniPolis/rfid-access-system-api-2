extends layout

block content
  .page-header
    h3= card.name

  .page-header
    h4 Update card

  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label disabled', for='uid') UID
      .col-sm-8
        input.form-control(type='text', name='uid', id='uid' value=card.uid disabled)
    .form-group
      label(class='col-sm-2 control-label', for='name') Name
      .col-sm-8
        input.form-control(type='text', name='name', id='name' value=card.name)
    .form-group
      label(class='col-sm-2 control-label', for='description') Description
      .col-sm-8
        textarea.form-control(name='description', id='description', rows='7')= card.description
    .form-group
      label(class='col-sm-2 control-label') Assigned locks
      .col-sm-8
        for lock in locks
          .checkbox
            label(for=lock._id)
              input(type='checkbox' id=lock._id name='locks' value=lock._id checked=lock.assigned)
              = lock.name
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          i.fa.fa-envelope
          | Update
